{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "spec/test",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true  
  },
  "include": ["src/**/*.ts", "src/**/*.js"]
}
